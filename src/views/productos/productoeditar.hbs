<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITANDO UN PRODUCTO</h3>
                </div>
                <div class="card-body">
                    <form action="/prodedit/{{productos.id_pro}}" method="post">
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="nombre_pro" id="nombre_pro" value="{{productos.nombre_pro}}" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="lastname" class="input-group-text">Descripci√≥n</label>
                        <input class="form-control" type="text" name="descripcion_pro" id="descripcion_pro" value="{{productos.descripcion_pro}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="correo" class="input-group-text">Precio</label>
                        <input class="form-control" type="number" name="precio_pro" id="precio_pro" value="{{productos.precio_pro}}" placeholder="0" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="age" class="input-group-text">Cantidad</label>
                        <input class="form-control" type="number" name="cantidad_pro" id="cantidad_pro" value="{{productos.cantidad_pro}}" placeholder="0" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success"> Actualizar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>