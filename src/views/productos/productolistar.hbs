<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de productoss</h3>
        {{#if articulos}}
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4">Nombre</th>
                        <th scope="col">Descripci√≥n</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each articulos}}
                        <tr>
                            <td>{{nombre_pro}}</td>
                            <td>{{descripcion_pro}}</td>
                            <td>{{precio_pro}}</td>
                            <td>{{cantidad_pro}}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/prodedit/{{id_pro}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pencil"></i></a>
                                    <a href="/proddelete/{{id_pro}}" class="btn btn-danger p-2">
                                    <i class="fa-solid fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="6">REGISTRO DE PRODUCTOS HASTA LA FECHA DE CONSULTA</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear un producto</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas registrar un producto en la aplicacion</p>
                    <a href="/prodcrear" class="btn btn-outline-primary">Ir a crear</a>
                </div>
        {{/if}}
    </div>
</div>