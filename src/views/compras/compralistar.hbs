<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de copmpras</h3>
        {{#if compras}}
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4">Nombre Cliente</th>
                        <th scope="col">Nopmbre del producto</th>
                        <th scope="col">Fecha de Compra</th>
                        <th scope="col">Cantidad comprada</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each compras}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{nombre_pro}}</td>
                            <td>{{fecha_com}}</td>
                            <td>{{cantidad_com}}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/compraedit/{{id_com}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pencil"></i></a>
                                    <a href="/compradelete/{{id_com}}" class="btn btn-danger p-2">
                                    <i class="fa-solid fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="6">REGISTRO DE COMPRAS HASTA LA FECHA DE CONSULTA</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes registrar una compra</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas registrar a una persona en la aplicacion</p>
                    <a href="/compracrear" class="btn btn-outline-primary">Ir a crear</a>
                </div>
        {{/if}}
    </div>
</div>